<div class="container">
	<h1>Bulletin Board</h1>
	<%= link_to "+ Create new", new_article_path, class: "btn btn-secondary float-right " %>
	<table border="1">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Content</th>
			<th>Created at</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.id %></td>
			<td><%= link_to article.title, article_path(article) %></td>
			<td><%= article.content %></td>
			<td><%= article.created_at.strftime('%Y/%m/%d') %></td>
			<td><%= link_to "edit", edit_article_path(article), class: "btn btn-secondary" %> <%= link_to "delete", article_path(article),method: :delete, class: "btn btn-secondary" %></td>
		</tr>
		<% end %>
	</tbody>
	</table>
</div>